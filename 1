const express = require('express');
const client = require('prom-client');

const app = express();
const port = process.env.PORT || 3000;

// ðŸŸ¢ Inicializar mÃ©tricas por defecto
client.collectDefaultMetrics();

// ðŸ”µ Crear el contador personalizado
const counter = new client.Counter({
  name: 'http_requests_total',
  help: 'NÃºmero total de solicitudes HTTP a /ping',
});

// ðŸŸ¡ Endpoint de prueba
app.get('/ping', (req, res) => {
  counter.inc(); // Incrementar el contador
  res.json({ message: 'pong' });
});

// ðŸ”µ Endpoint de mÃ©tricas
app.get('/metrics', async (req, res) => {
  res.set('Content-Type', client.register.contentType);
  res.end(await client.register.metrics());
});

// âœ… SOLO iniciar el servidor si es ejecutado directamente
if (require.main === module) {
  app.listen(port, () => {
    console.log(`API corriendo en http://localhost:${port}`);
  });
}

module.exports = app;

